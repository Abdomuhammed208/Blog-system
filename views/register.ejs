<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="name" class="form-control" name="name" placeholder="Name">
            </div>
            <div class="form-group">
              <label for="mobile">Mobile Number</label>
              <input type="mobile" class="form-control" name="mobile" placeholder="Mobile Number">
            </div>
            <div class="form-group">
              <label for="email">Username</label>
              <input type="email" class="form-control" name="username" placeholder="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="password">
              <a class="registration-link" href="/login">I already have account </a>
              <br>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
